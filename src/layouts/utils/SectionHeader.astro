---
const {header, subHead} = Astro.props;
---
<div class="sect-heading">
    <h2>{header}</h2>
    <p class="sub-head">{subHead}</p>
</div>
<style>
.sect-heading{

display: flex;
flex-flow: column nowrap;
line-height: 2.5;
margin: 0;
padding: 1.5rem 0;
font-family: var(--font-family-primary-font-extended);
letter-spacing: .2rem;
}
h2{
  line-height: 1.25em;
  font-size: clamp(3.5rem,4.75vw, 4.75rem);
  
  padding: 0;
  
  margin: 0;
}
.sub-head{
  font-size: clamp(2.5rem,3.75vw, 3.75rem);
  font-family: var(--font-family-secondary-font);
  font-weight: 200;
  line-height: 1.25;


}

</style>