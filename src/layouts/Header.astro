---
import TopNavigation from "./Top-Navigation.astro";
import brandImg from '../../public/oi-logo.webp';
import { Image } from "astro:assets";
---
<header>
    <div class="brand">
        <Image src={ brandImg } alt="Brand Logo"/></div>
    <TopNavigation/>
</header>

<style>
header{
  display: flex;
  flex-flow: row wrap;
  min-height: 5rem;
  width: 95%;
  align-self: center;
  align-items: center;
  padding-block: 1.75rem;
  justify-content: space-between;
}
.brand{
    display: flex;
    height: clamp(4rem, 6vw, 6rem);

  
  }
  .brand img{
      width: 100%;
      height: 100%;
      object-fit: cover;
    }  
    
</style>