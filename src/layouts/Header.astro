---
import TopNavigation from "./Top-Navigation.astro";
import brandImg from '../images/oi-logo.webp';
import { Image } from "astro:assets";
import MobileMenu from "./utils/MobileMenu.astro";
---
<header class="head" transition:animate="none">
  <div class="mobile-head">
    <div class="brand">
      <a href="/"><Image src={ brandImg } alt="Brand Logo"/></a>
    </div>
    <MobileMenu />
  </div>

    
    <TopNavigation/>
</header>

<style lang="scss">
.head{
  display: flex;
  flex-flow: row wrap;
  min-height: 5rem;
  width: 95%;
  align-self: center;
  align-items: center;
  padding-block: 1.75rem;
  justify-content: space-between;
}

.brand{
    display: flex;
    height: clamp(3.5rem, calc(6vw + 1rem), 7.5rem);
    a{
      height: 100%;
    }
  }


  .brand img{
      width: 100%;
      height: 100%;
      object-fit: cover;
    }  
    
    @media (min-width: 0px) and (max-width: 600px) {
      .head{
          width: 100%;
          flex-flow: column nowrap;
          align-items: center;
          align-content: center;
          background-color: hsla(0, 0%, 100%, 0.85);
          top: 0;
          z-index: 100;
          justify-content: center;
          box-shadow: 0 0 1.5rem rgba(0,0,0,0.5);
  }
  
        .mobile-head{
            display: flex;
            flex-flow: row wrap;
            width: 100%;
            justify-content: space-between;
            align-items: center;
            align-content: center;
            padding: 0 2rem;
            isolation: isolate;
          }
            
  
}
</style>