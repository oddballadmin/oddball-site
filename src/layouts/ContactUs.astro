---
import SectionHeader from "./utils/SectionHeader.astro";
import { Image } from "astro:assets";
import family from "../images/family.png";

---
<div class="container page-sect">

    <SectionHeader header="Want To Hire Me?!" subHead="Contact me using the form below"/>
    <section class="contact-us">
      <div class="cf-group">
        <form class="contact-form" name="contact" method="post" data-netlify="true" onsubmit="submit">
          <select required id="project-type" name="project-type" class="p-picker">
              <option value="Web Design">Web Design</option>
              <option value="SEO">Seo</option>
              <option value="Contract Work">Contract Work</option>
              <option value="App Development">App Development</option>
          </select>
          <input required class="email-in" type="email" name="email"placeholder="Email Address"/>
          <textarea required class="desc-area" name="message"  placeholder="Brief description of project"/>
          <div class="btn-group">
              <button type="reset">Reset</button>
              <button type="submit">Submit</button>
          </div>
      </form>
      <div class="img-side">
          <Image src={family} alt="Family"/>
      </div>
      </div>
        
    </section>

</div>
<style>
    .page-sect{
        margin-top: 2rem;
    }
    .cf-group{
      margin: 5rem 0;
      display: flex;
      flex-flow: row nowrap;
      align-items: center;
      gap: 2rem;
    }
    .contact-us{
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: start;
  flex: 1;
    }
  .contact-form{
    flex: .5;
    display: flex;
    gap: 1em;
    flex-flow: column nowrap;
    font-size: clamp(1.5rem,calc(3vw + 1rem),2.5rem);
    height: 100%;
  }
   .contact-form input,select,button,textarea{
      box-shadow: 1px 5px 5px 3px rgba(0,0,0,0.2);

    }
    .p-picker{
      width: 100%;
      padding: .25em 0 .25em .25em;
    }
    
    .desc-area{
      height: 40%;
      resize: none !important;

    }
    .btn-group{
      font-size: clamp(1rem,calc(1vw + 1rem),3rem);
      display: flex;
      flex-flow: row nowrap;
      gap: 5rem;
    
    }
    .btn-group button{
        padding: 0 1em;
      }
  
  .img-side{
    display: flex;
    flex: .5;
    background-attachment: fixed;

  }
  .img-side img{
    margin: auto;
      width: 50%;
      height: auto;
    }




    @media (min-width: 0px) and (max-width: 600px) {
      .cf-group{ 
        flex-flow: column nowrap;
        align-items: center;
      }
        .contact-us{
            flex-direction: column;
        }
        .contact-form{
            width: 100%;
            align-items: center;
        }
        .btn-group{
            width: 100%;
            align-items: center;
            justify-content: center;
        }
        .img-side{
            width: 100%;
            justify-content: center;
        }
        input,textarea{
            width: 100%;
        }
        .p-picker{
            width: 100%;
        }
}
</style>

